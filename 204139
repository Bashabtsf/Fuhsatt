                options: ["Container with ice cubes", "Van for transportation of vaccines", "Equipment for vaccine storage to maintain the potency of vaccines", "Equipment for distribution of materials"],
                answer: 2,
                type: "mcq"
            },
            {
                id: 99,
                question: "One of the following is not part of the reproductive system:",
                options: ["Fallopian tubes", "Testis", "Uterus", "Urethra"],
                answer: 3,
                type: "mcq"
            },
            {
                id: 100,
                question: "The inner layer of the skin consists of the following except:",
                options: ["Sweat glands", "Dermis", "Blood vessels", "Epidermis"],
                answer: 3,
                type: "mcq"
            }
        ]
    }
};

// DOM Elements
const loginScreen = document.getElementById('login-screen');
const dashboardScreen = document.getElementById('dashboard-screen');
const loginForm = document.getElementById('login-form');
const usernameInput = document.getElementById('username');
const loggedInUser = document.getElementById('logged-in-user');
const examContent = document.getElementById('exam-content');
const resultsContent = document.getElementById('results-content');
const examTitle = document.getElementById('exam-title');
const examTimer = document.getElementById('exam-timer');
const currentQuestionElement = document.getElementById('current-question');
const totalQuestionsElement = document.getElementById('total-questions');
const questionNumbersContainer = document.querySelector('.question-numbers');
const questionText = document.getElementById('question-text');
const optionsContainer = document.getElementById('options-container');
const prevBtn = document.getElementById('prev-btn');
const nextBtn = document.getElementById('next-btn');
const submitBtn = document.getElementById('submit-btn');
const scorePercentage = document.getElementById('score-percentage');
const scoreText = document.getElementById('score-text');
const detailedResults = document.getElementById('detailed-results');
const backToExamBtn = document.getElementById('back-to-exam');

// Exam Variables
let currentExam = null;
let currentQuestionIndex = 0;
let userAnswers = [];
let timerInterval = null;
let timeLeft = 0;

// Initialize the application
function init() {
    // Event Listeners
    loginForm.addEventListener('submit', handleLogin);
    prevBtn.addEventListener('click', showPreviousQuestion);
    nextBtn.addEventListener('click', showNextQuestion);
    submitBtn.addEventListener('click', submitExam);
    backToExamBtn.addEventListener('click', showExamContent);
    
    // Menu Event Listeners
    document.getElementById('exam-menu').addEventListener('click', showExamContent);
    document.getElementById('results-menu').addEventListener('click', showResultsContent);
    document.getElementById('logout-menu').addEventListener('click', logout);
    
    // Load sample exam data
    currentExam = exams.communityHealth;
    userAnswers = new Array(currentExam.questions.length).fill(null);
}

// Handle Login
function handleLogin(e) {
    e.preventDefault();
    const username = usernameInput.value.trim();
    
    if (username) {
        loggedInUser.textContent = username;
        loginScreen.classList.add('hidden');
        dashboardScreen.classList.remove('hidden');
        showExamContent();
        startExam();
    }
}

// Start Exam
function startExam() {
    // Reset exam variables
    currentQuestionIndex = 0;
    userAnswers = new Array(currentExam.questions.length).fill(null);
    
    // Set exam title
    examTitle.textContent = currentExam.title;
    
    // Set total questions
    totalQuestionsElement.textContent = currentExam.questions.length;
    
    // Start timer
    timeLeft = currentExam.duration * 60;
    startTimer();
    
    // Generate question numbers
    generateQuestionNumbers();
    
    // Display first question
    displayQuestion();
}

// Start Timer
function startTimer() {
    clearInterval(timerInterval);
    
    timerInterval = setInterval(() => {
        timeLeft--;
        updateTimerDisplay();
        
        if (timeLeft <= 0) {
            clearInterval(timerInterval);
            submitExam();
        }
    }, 1000);
    
    updateTimerDisplay();
}

// Update Timer Display
function updateTimerDisplay() {
    const minutes = Math.floor(timeLeft / 60);
    const seconds = timeLeft % 60;
    examTimer.textContent = `${minutes}:${seconds < 10 ? '0' : ''}${seconds}`;
    
    // Change color when time is running low
    if (timeLeft <= 300) { // 5 minutes or less
        examTimer.style.color = 'var(--danger-color)';
    }
}

// Generate Question Numbers
function generateQuestionNumbers() {
    questionNumbersContainer.innerHTML = '';
    
    currentExam.questions.forEach((question, index) => {
        const questionNumber = document.createElement('div');
        questionNumber.className = 'question-number';
        questionNumber.textContent = index + 1;
        questionNumber.dataset.index = index;
        
        // Highlight current question
        if (index === currentQuestionIndex) {
            questionNumber.classList.add('active');
        }
        
        // Mark answered questions
        if (userAnswers[index] !== null) {
            questionNumber.classList.add('answered');
        }
        
        questionNumber.addEventListener('click', () => {
            currentQuestionIndex = index;
            displayQuestion();
        });
        
        questionNumbersContainer.appendChild(questionNumber);
    });
}

// Display Current Question
function displayQuestion() {
    const question = currentExam.questions[currentQuestionIndex];
    
    // Update current question display
    currentQuestionElement.textContent = currentQuestionIndex + 1;
    
    // Update question numbers highlighting
    updateQuestionNumbersHighlight();
    
    // Display question text
    questionText.textContent = `${question.id}. ${question.question}`;
    
    // Clear previous options
    optionsContainer.innerHTML = '';
    
    // Display options based on question type
    if (question.type === 'mcq' || question.type === 'truefalse') {
        question.options.forEach((option, index) => {
            const optionElement = document.createElement('div');
            optionElement.className = 'option';
            
            if (userAnswers[currentQuestionIndex] === index) {
                optionElement.classList.add('selected');
            }
            
            const radioInput = document.createElement('input');
            radioInput.type = 'radio';
            radioInput.name = 'question-option';
            radioInput.value = index;
            radioInput.id = `option-${index}`;
            radioInput.checked = userAnswers[currentQuestionIndex] === index;
            
            const label = document.createElement('label');
            label.htmlFor = `option-${index}`;
            label.textContent = option;
            
            optionElement.appendChild(radioInput);
            optionElement.appendChild(label);
            
            optionElement.addEventListener('click', () => {
                userAnswers[currentQuestionIndex] = index;
                displayQuestion(); // Refresh to show selection
            });
            
            optionsContainer.appendChild(optionElement);
        });
    } else if (question.type === 'text') {
        const inputElement = document.createElement('input');
        inputElement.type = 'text';
        inputElement.className = 'text-answer';
        inputElement.placeholder = 'Type your answer here...';
        
        if (userAnswers[currentQuestionIndex] !== null) {
            inputElement.value = userAnswers[currentQuestionIndex];
        }
        
        inputElement.addEventListener('input', (e) => {
            userAnswers[currentQuestionIndex] = e.target.value.trim();
        });
        
        optionsContainer.appendChild(inputElement);
    }
    
    // Update navigation buttons
    prevBtn.disabled = currentQuestionIndex === 0;
    
    // Show submit button on last question
    if (currentQuestionIndex === currentExam.questions.length - 1) {
        nextBtn.classList.add('hidden');
        submitBtn.classList.remove('hidden');
    } else {
        nextBtn.classList.remove('hidden');
        submitBtn.classList.add('hidden');
    }
}

// Update Question Numbers Highlight
function updateQuestionNumbersHighlight() {
    const questionNumbers = document.querySelectorAll('.question-number');
    
    questionNumbers.forEach((number, index) => {
        number.classList.remove('active');
        
        if (index === currentQuestionIndex) {
            number.classList.add('active');
        }
        
        if (userAnswers[index] !== null) {
            number.classList.add('answered');
        } else {
            number.classList.remove('answered');
        }
    });
}

// Show Previous Question
function showPreviousQuestion() {
    if (currentQuestionIndex > 0) {
        currentQuestionIndex--;
        displayQuestion();
    }
}

// Show Next Question
function showNextQuestion() {
    if (currentQuestionIndex < currentExam.questions.length - 1) {
        currentQuestionIndex++;
        displayQuestion();
    }
}

// Submit Exam
function submitExam() {
    clearInterval(timerInterval);
    
    // Calculate score
    let score = 0;
    const results = [];
    
    currentExam.questions.forEach((question, index) => {
        const userAnswer = userAnswers[index];
        let isCorrect = false;
        
        if (question.type === 'mcq' || question.type === 'truefalse') {
            isCorrect = userAnswer === question.answer;
        } else if (question.type === 'text') {
            isCorrect = userAnswer && userAnswer.toLowerCase() === question.answer.toLowerCase();
        }
        
        if (isCorrect) {
            score++;
        }
        
        results.push({
            question: question.question,
            userAnswer: question.type === 'mcq' || question.type === 'truefalse' 
                ? (userAnswer !== null ? question.options[userAnswer] : 'Not answered') 
                : (userAnswer || 'Not answered'),
            correctAnswer: question.type === 'mcq' || question.type === 'truefalse' 
                ? question.options[question.answer] 
                : question.answer,
            isCorrect
        });
    });
    
    const percentage = Math.round((score / currentExam.questions.length) * 100);
    
    // Display results
    showResultsContent();
    
    // Update score display
    scorePercentage.textContent = percentage;
    scoreText.textContent = `${score} out of ${currentExam.questions.length} correct`;
    
    // Generate detailed results
    detailedResults.innerHTML = '';
    results.forEach((result, index) => {
        const resultItem = document.createElement('div');
        resultItem.className = `detailed-result-item ${result.isCorrect ? 'correct' : 'incorrect'}`;
        
        const questionResult = document.createElement('div');
        questionResult.className = 'question-result';
        questionResult.textContent = `${index + 1}. ${result.question}`;
        
        const userAnswer = document.createElement('div');
        userAnswer.className = 'answer-result';
        userAnswer.textContent = `Your answer: ${result.userAnswer}`;
        
        const correctAnswer = document.createElement('div');
        correctAnswer.className = 'answer-result';
        correctAnswer.textContent = `Correct answer: ${result.correctAnswer}`;
        
        resultItem.appendChild(questionResult);
        resultItem.appendChild(userAnswer);
        
        if (!result.isCorrect) {
            resultItem.appendChild(correctAnswer);
        }
        
        detailedResults.appendChild(resultItem);
    });
}

// Show Exam Content
function showExamContent() {
    examContent.classList.remove('hidden');
    resultsContent.classList.add('hidden');
    
    // Update active menu
    document.querySelectorAll('.menu-item').forEach(item => {
        item.classList.remove('active');
    });
    document.getElementById('exam-menu').classList.add('active');
}

// Show Results Content
function showResultsContent() {
    examContent.classList.add('hidden');
    resultsContent.classList.remove('hidden');
    
    // Update active menu
    document.querySelectorAll('.menu-item').forEach(item => {
        item.classList.remove('active');
    });
    document.getElementById('results-menu').classList.add('active');
}

// Logout
function logout() {
    dashboardScreen.classList.add('hidden');
    loginScreen.classList.remove('hidden');
    usernameInput.value = '';
}

// Initialize the application
init();